<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@drawable/ur_food_item"
  android:padding="20dp"
  android:elevation="10dp"
  android:layout_margin="20dp"
  >

  <ImageView
    android:id="@+id/foodImg"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:scaleType="centerCrop"
    android:src="@drawable/background_login"
    android:background="@drawable/ur_food_img"
    />

  <TextView
    android:id="@+id/foodName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="FoodName"
    android:textSize="20dp"
    android:textFontWeight="700"
    android:textColor="@android:color/black"
    android:layout_marginVertical="10dp"
    />

  <LinearLayout
    android:id="@+id/foodBasicInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@drawable/ur_border_top_and_bottom"
    android:layout_marginBottom="15dp">
    <LinearLayout
      android:id="@+id/serving"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:background="@drawable/ur_border_right">
      <TextView
        android:id="@+id/titleServing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servings"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textFontWeight="500"/>
      <TextView
        android:id="@+id/servingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8pp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textFontWeight="600"
        />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/prep"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:background="@drawable/ur_border_right">
      <TextView
        android:id="@+id/titlePrep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prep"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textFontWeight="500"/>
      <TextView
        android:id="@+id/prepValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3hrs"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textFontWeight="600"
        />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/cook"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center">
      <TextView
        android:id="@+id/titleCook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cook"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textFontWeight="500"/>
      <TextView
        android:id="@+id/cookValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2hrs"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textFontWeight="600"
        />
    </LinearLayout>
  </LinearLayout>

  <ImageView
    android:id="@+id/bin"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/ic_bin"/>
</LinearLayout>

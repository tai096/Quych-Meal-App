<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity">

    <!--  BACKGROUND IMAGE  -->
    <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:src="@drawable/background_login"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Sign up to Quych Meal"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="32sp"
          />

        <!-- EMAIL -->
        <LinearLayout
          android:id="@+id/emailContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginHorizontal="20dp"
          android:layout_marginBottom="10dp">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            />
          <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/login_custom_input"
            android:textFontWeight="700"
            android:padding="6dp"/>
        </LinearLayout>

        <!-- USERNAME -->
        <LinearLayout
          android:id="@+id/usernameContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginHorizontal="20dp"
          android:layout_marginBottom="10dp">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            />
          <EditText
            android:id="@+id/editTxtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:background="@drawable/login_custom_input"
            android:textFontWeight="700"
            android:padding="6dp"/>
        </LinearLayout>

        <!-- PASSWORD -->
        <LinearLayout
          android:id="@+id/passwordContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginHorizontal="20dp"
          android:layout_marginBottom="10dp">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            />
          <EditText
            android:id="@+id/editTxtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="8+ Characters"
            android:inputType="textPassword"
            android:background="@drawable/login_custom_input"
            android:textFontWeight="700"
            android:padding="6dp"/>
        </LinearLayout>

        <!-- AGE -->
        <LinearLayout
          android:id="@+id/ageContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginHorizontal="20dp"
          android:layout_marginBottom="10dp">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            />
          <EditText
            android:id="@+id/editTxtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:background="@drawable/login_custom_input"
            android:textFontWeight="700"
            android:padding="6dp"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="71dp" />
        </LinearLayout>

        <!-- SEX -->
        <LinearLayout
          android:id="@+id/sexContainer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginHorizontal="20dp"
          android:layout_marginBottom="30dp"
          >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            />
          <EditText
            android:id="@+id/editTxtSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Sex"
            android:inputType="text"
            android:background="@drawable/login_custom_input"
            android:textFontWeight="700"
            android:padding="6dp"/>
        </LinearLayout>

        <Button
          android:id="@+id/btnSignUp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Create Account"
          android:textFontWeight="700"
          android:textSize="20dp"
          android:layout_marginHorizontal="20dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/sexContainer" />

        <Button
          android:id="@+id/btnNavigateToLogin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Already have an account? Log in"
          android:textSize="16dp"
          android:textFontWeight="600"
          android:background="@android:color/transparent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/btnSignUp" />



    </LinearLayout>

    <LinearLayout
      android:id="@+id/logo_holder"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:layout_marginVertical="30dp"
      android:orientation="horizontal"
      app:layout_constraintTop_toTopOf="@+id/linearLayout">
      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_logo" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

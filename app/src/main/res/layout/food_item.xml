<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CardQuychMeal"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/foodImg"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:cornerRadius="9.78sp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/foodName"
            style="@style/TextQuychMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:textSize="18sp"
            android:text="name"
            android:textStyle="bold"
            android:textAlignment="center"
         />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleServing"
                    style="@style/TextQuychMeal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_textview_food_item"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:text="@string/servings" />

                <TextView
                    android:id="@+id/servingValue"
                    style="@style/TextQuychMeal"
                    android:textSize="11sp"
                    android:background="@drawable/border_textview_food_item"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1p" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titlePrep"
                    style="@style/TextQuychMeal"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:background="@drawable/border_textview_food_item"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="@string/prep" />

                <TextView
                    android:id="@+id/prepValue"
                    style="@style/TextQuychMeal"
                    android:background="@drawable/border_textview_food_item"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_weight="1"
                    android:text="15m" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleCook"
                    android:textSize="11sp"
                    style="@style/TextQuychMeal"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cook" />

                <TextView
                    android:id="@+id/cookValue"
                    style="@style/TextQuychMeal"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:text="20m" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/tryNowBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:drawableEnd="@drawable/ic_cook"
                android:text="@string/try_now"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>